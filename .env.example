# ===========================================
# PokerKit Holdem - Environment Variables
# ===========================================
# Copy this file to .env and modify as needed
# cp .env.example .env

# ----- Application -----
APP_ENV=development
APP_HOST=0.0.0.0
APP_PORT=8000
APP_DEBUG=true
LOG_LEVEL=DEBUG
LOG_FORMAT=json

# ----- Database (PostgreSQL) -----
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/pokerkit
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30

# Docker PostgreSQL settings
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=pokerkit
POSTGRES_PORT=5432

# ----- Redis -----
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_SESSION_TTL=86400

# ----- Authentication -----
# IMPORTANT: Change these in production!
JWT_SECRET_KEY=dev-secret-key-change-in-production-use-strong-random-key
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7
SESSION_SECRET_KEY=dev-session-secret-change-in-production

# ----- CORS -----
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CORS_ALLOW_CREDENTIALS=true

# ----- Game Settings -----
DEFAULT_MAX_SEATS=6
DEFAULT_SMALL_BLIND=10
DEFAULT_BIG_BLIND=20
DEFAULT_BUY_IN_MIN=400
DEFAULT_BUY_IN_MAX=2000
TURN_TIMEOUT=30
RECONNECT_GRACE_PERIOD=60
HEARTBEAT_INTERVAL=15

# ----- Rate Limiting -----
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
WS_RATE_LIMIT_MESSAGES=50
WS_RATE_LIMIT_WINDOW=10

# ----- Frontend (Next.js) -----
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000/ws
NEXT_PUBLIC_ENABLE_CHAT=true
NEXT_PUBLIC_ENABLE_SPECTATOR=true
NEXT_PUBLIC_ENABLE_HAND_HISTORY=true

# ----- Internal (SSR) -----
INTERNAL_API_URL=http://backend:8000
