# PokerKit Holdem Backend - Environment Variables Example
# Copy this file to .env and fill in the values

# =============================================================================
# Application Settings
# =============================================================================
APP_NAME=PokerKit Holdem
APP_ENV=development  # development, staging, production
APP_DEBUG=true       # false in production
LOG_LEVEL=DEBUG      # INFO in production

# =============================================================================
# Database (PostgreSQL)
# =============================================================================
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/pokerkit

# Connection Pool Settings
DB_POOL_SIZE=100
DB_MAX_OVERFLOW=50
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=1800

# =============================================================================
# Redis
# =============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=100

# =============================================================================
# Security Keys (MUST be changed in production!)
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
# =============================================================================
JWT_SECRET_KEY=your-64-character-hex-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=3

SERIALIZATION_HMAC_KEY=your-64-character-hex-hmac-key-here-change-in-production
SESSION_SECRET_KEY=your-64-character-hex-session-key-here-change-in-production
INTERNAL_API_KEY=your-32-character-api-key-here-change-in-production

# =============================================================================
# CORS Settings
# =============================================================================
# Comma-separated list of allowed origins
# Development:
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
# Production example (replace with your actual domain/IP):
# CORS_ORIGINS=http://158.247.252.240:3000,http://158.247.252.240:3001

# =============================================================================
# Monitoring & Error Tracking
# =============================================================================
# Sentry DSN (REQUIRED in production)
SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1

# =============================================================================
# Uvicorn Server
# =============================================================================
UVICORN_HOST=0.0.0.0
UVICORN_PORT=8000
UVICORN_WORKERS=4  # CPU cores * 2 + 1 recommended

# =============================================================================
# WebSocket Settings
# =============================================================================
WS_HEARTBEAT_INTERVAL=30
WS_RATE_LIMIT_MESSAGES=50
WS_RATE_LIMIT_WINDOW=10

# =============================================================================
# Game Settings
# =============================================================================
DEFAULT_PARTNER_CODE=

# =============================================================================
# Development Only (disable in production)
# =============================================================================
DEV_API_ENABLED=true
DEV_API_KEY=dev-key
