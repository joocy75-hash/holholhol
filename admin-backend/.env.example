# Application
DEBUG=true
APP_NAME="Admin Dashboard API"

# Admin Database (separate from main)
ADMIN_DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5433/admin_db

# Main Database Read Replica (read-only access)
MAIN_DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/holdem_db

# Redis
REDIS_URL=redis://localhost:6380/1

# JWT
JWT_SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Main Backend API (for write operations)
MAIN_API_URL=http://localhost:8000
MAIN_API_KEY=admin-api-key

# Crypto - TRON Network
TRON_NETWORK=shasta  # Use 'mainnet' for production
TRON_HOT_WALLET_ADDRESS=your-hot-wallet-address

# Crypto - Exchange Rate
UPBIT_API_URL=https://api.upbit.com/v1
BINANCE_API_URL=https://api.binance.com/api/v3
EXCHANGE_RATE_CACHE_TTL=30

# Security Thresholds
WITHDRAWAL_SUPERVISOR_THRESHOLD=1000.0
HOT_WALLET_ALERT_THRESHOLD=5000.0
DEPOSIT_CONFIRMATIONS_REQUIRED=20
