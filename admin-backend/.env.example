# Application
DEBUG=true
APP_NAME="Admin Dashboard API"

# Admin Database (separate from main)
ADMIN_DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5433/admin_db

# Main Database Read Replica (read-only access)
MAIN_DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/holdem_db

# Redis
REDIS_URL=redis://localhost:6380/1

# JWT - 필수 설정 (보안상 기본값 없음)
# 최소 32자 이상의 안전한 키를 생성하세요:
# python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=CHANGE_ME_GENERATE_SECURE_KEY_MIN_32_CHARS
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Main Backend API (for write operations)
MAIN_API_URL=http://localhost:8000
# 최소 16자 이상의 안전한 키를 생성하세요:
# python -c "import secrets; print(secrets.token_urlsafe(24))"
MAIN_API_KEY=CHANGE_ME_GENERATE_SECURE_KEY_MIN_16_CHARS

# Crypto - TRON Network (Legacy)
TRON_NETWORK=shasta  # Use 'mainnet' for production
TRON_HOT_WALLET_ADDRESS=your-hot-wallet-address

# Crypto - TON Network
TON_NETWORK=testnet  # Use 'mainnet' for production
TON_HOT_WALLET_ADDRESS=your-ton-hot-wallet-address
TON_USDT_MASTER_ADDRESS=EQCxE6mUtQJKFnGfaROTKOt1lZbDiiX1kCixRv7Nw2Id_sDs
TONAPI_KEY=your-tonapi-key
TON_CENTER_API_KEY=your-toncenter-api-key

# Telegram Bot
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_ADMIN_CHAT_ID=your-admin-chat-id

# Crypto - Exchange Rate
UPBIT_API_URL=https://api.upbit.com/v1
BINANCE_API_URL=https://api.binance.com/api/v3
COINGECKO_API_URL=https://api.coingecko.com/api/v3
EXCHANGE_RATE_CACHE_TTL=30

# Deposit Settings
DEPOSIT_EXPIRY_MINUTES=30
DEPOSIT_AMOUNT_TOLERANCE=0.005
DEPOSIT_POLLING_INTERVAL=10
HOT_WALLET_MIN_BALANCE=1000

# Security Thresholds
WITHDRAWAL_SUPERVISOR_THRESHOLD=1000.0
HOT_WALLET_ALERT_THRESHOLD=5000.0
DEPOSIT_CONFIRMATIONS_REQUIRED=20
CSRF_ENABLED=false

# CORS - 프로덕션에서는 실제 도메인으로 설정
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# KMS (Key Management Service) - Phase 8
# Options: local (dev only), vault, secrets (AWS)
KMS_PROVIDER=
TON_HOT_WALLET_PRIVATE_KEY=
VAULT_ADDR=
VAULT_TOKEN=
VAULT_TRANSIT_MOUNT=transit

# Withdrawal Automation
WITHDRAWAL_AUTO_ENABLED=false
WITHDRAWAL_AUTO_THRESHOLD_USDT=100.0
WITHDRAWAL_MONITOR_INTERVAL=30
WITHDRAWAL_TX_TIMEOUT_MINUTES=30
WITHDRAWAL_MAX_RETRY=3

# Fraud Detection
FRAUD_CONSUMER_ENABLED=true
AUTO_BAN_ENABLED=true
AUTO_BAN_HIGH_SEVERITY_IMMEDIATE=true

# Deposit Monitor
DEPOSIT_MONITOR_ENABLED=true
